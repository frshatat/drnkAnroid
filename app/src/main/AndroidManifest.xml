<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.drnkmobile.drnkAndroid.app" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light" >
        <activity
            android:name="com.drnkmobile.drnkAndroid.drnk.drnk"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.drnkmobile.drnkAndroid.drnk.SpecialActivity"
            android:label="@string/title_activity_special" >
        </activity>
        <activity
            android:name="com.drnkmobile.drnkAndroid.drnk.TodayActivity"
            android:label="@string/title_activity_today" >
        </activity>
        <activity
            android:name="com.drnkmobile.drnkAndroid.drnk.WeekActivity"
            android:label="@string/title_activity_week" >
        </activity>
    </application>

</manifest>
