<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.drnkmobile.drnkAndroid.test.InfoFragment">

    <TextView
            android:text="Address:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/address1" android:textColor="#f0fdff"
            android:textSize="12sp" android:clickable="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today's Hours:"
            android:id="@+id/businesshours"
            android:textColor="#f7fffa" android:layout_below="@+id/address1" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_marginTop="30dp" android:textSize="12sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone:"
            android:id="@+id/phone"
            android:autoLink="phone"
            android:textColor="#eeffed"
            android:layout_below="@+id/address1" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_marginTop="60dp" android:textSize="12sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Location Not Found"
            android:id="@+id/locationField"
            android:textColor="#efefef" android:clickable="true"
            android:layout_alignTop="@+id/address1" android:layout_alignLeft="@+id/businesshoursField"
            android:layout_alignStart="@+id/businesshoursField" android:textSize="17sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Business Hours Unavaillable"
            android:id="@+id/businesshoursField"
            android:textColor="#efefef"
            android:layout_alignBottom="@+id/businesshours" android:layout_toRightOf="@+id/businesshours"
            android:layout_toEndOf="@+id/businesshours" android:textSize="17sp" android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Phone Number Unavailable"
            android:id="@+id/phoneNumberField"
            android:textColor="#1650ff"
            android:clickable="true" android:layout_alignBottom="@+id/phone"
            android:layout_alignLeft="@+id/businesshoursField" android:layout_alignStart="@+id/businesshoursField"
            android:textSize="17sp" android:layout_marginTop="10dp"/>

</RelativeLayout>
