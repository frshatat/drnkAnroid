<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:tools="http://schemas.android.com/tools"
        android:background="@drawable/slidemenu"
        android:largeHeap="true">
<ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"

        android:id="@+id/navigation_list"
        tools:context=".NavigationDrawerFragment"
        android:layout_below="@+id/navigation_drawer_title" android:backgroundTint="#010101" android:backgroundTintMode="add"
/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="drnk"
            android:id="@+id/navigation_drawer_title" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#00baff" android:textSize="75sp" android:textAlignment="center"
            android:foregroundGravity="center" android:backgroundTint="#00baff"
            android:layout_alignWithParentIfMissing="false" android:gravity="fill_vertical|center_horizontal"/>
</RelativeLayout>