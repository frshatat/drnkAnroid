<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/item_specials" android:weightSum="1" android:rowCount="2"
            android:orientation="horizontal"
                android:backgroundTintMode="add">

    <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_width="wrap_content"
                    android:layout_height="122dp"
                    android:id="@+id/imageView"
                    android:src="@drawable/ic_logo"
                    android:layout_gravity="left|top" android:contentDescription="logo_icon"
                    android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>
        <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/textView"
                android:textSize="14sp"
                android:layout_below="@+id/featured" android:layout_alignStart="@+id/featured"
                android:textColor="#ffffffff" android:padding="0dp" android:layout_marginLeft="110dp"
                android:layout_marginTop="37dp"/>
        <ImageView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:src="@drawable/thinline"
                android:id="@+id/imageView2"
                android:layout_alignTop="@+id/imageView" android:layout_toEndOf="@+id/imageView"
                android:cropToPadding="false" android:layout_marginTop="13dp" android:layout_marginLeft="70dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"

                android:text="Featured Specials"
                android:id="@+id/featured"
                android:textSize="14sp" android:textStyle="italic"
                android:typeface="normal" android:padding="0dp" android:layout_marginLeft="100dp"
                android:layout_gravity="center_horizontal|left|top" android:layout_marginTop="35dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Business Name"
                android:id="@+id/textView2"

                android:typeface="normal"
                android:textStyle="bold" android:textSize="21sp"
                android:layout_gravity="center_horizontal|left" android:layout_marginLeft="85dp"
                style="@style/TextAppearance.AppCompat.Widget.ActionMode.Title"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Address Here"
                android:id="@+id/textView3"
                android:layout_gravity="center_horizontal|left|top" android:layout_marginTop="20dp"
                android:layout_marginLeft="90dp" android:textSize="14sp" android:textColor="#ff020bff"/>
    </FrameLayout>
</RelativeLayout>
