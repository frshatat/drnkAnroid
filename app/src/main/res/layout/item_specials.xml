<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:id="@+id/item_specials" android:weightSum="1" android:rowCount="2"
            android:orientation="horizontal">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="122dp"
                android:id="@+id/imageView"
                android:src="@drawable/ic_logo"
                android:layout_gravity="left|top" android:contentDescription="logo_icon"
                android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/textView"
            android:textSize="20dp"
            android:layout_below="@+id/featured" android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal|top"
            android:typeface="sans"
            android:layout_alignParentTop="true" android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Featured Specials"
            android:id="@+id/featured"
            android:layout_below="@+id/textView2" android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView"/>
</RelativeLayout>
