<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/item_specials" android:weightSum="1" android:rowCount="2"
            android:orientation="horizontal"
                android:backgroundTintMode="add">

    <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:id="@+id/frameLayout">

        <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/specialsTextView"
                android:textSize="14sp"
                android:layout_below="@+id/featured" android:layout_alignStart="@+id/featured"
                android:textColor="#ffffffff" android:padding="0dp" android:layout_marginLeft="95dp"
                android:layout_marginTop="45dp"/>
                android:layout_marginTop="37dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"

                android:id="@+id/featured"
                android:textSize="14sp" android:textStyle="italic"
                android:typeface="normal" android:padding="0dp" android:layout_marginLeft="100dp"
                android:layout_gravity="center_horizontal|left|top" android:layout_marginTop="40dp"
                android:textColor="#888c89"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Business Name"
                android:id="@+id/businessNameTextView"

                android:typeface="normal"
                android:textStyle="bold" android:textSize="20sp"
                android:layout_gravity="center_horizontal|left" android:layout_marginLeft="40dp"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse" android:singleLine="false"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Address Here"
                android:id="@+id/address"
                android:layout_gravity="center_horizontal|left|top" android:layout_marginTop="22dp"
                android:layout_marginLeft="35dp" android:textSize="12sp" android:textColor="#00baff"
                android:clickable="true" android:onClick="findSpecificBusinessLocationWhenUserClicksOnAddress"/>
        <com.drnkmobile.drnkAndroid.drnk.Customize.RoundedImageView
                android:layout_width="65dp"
                android:layout_height="80dp"
                android:id="@+id/imageView"
                android:layout_gravity="left|top" android:contentDescription="logo_icon"
                android:layout_marginLeft="25dp" android:layout_marginStart="32dp"
                android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" android:layout_marginTop="50dp"/>
    </FrameLayout>
</RelativeLayout>
